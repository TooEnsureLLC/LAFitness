@page "/"

@inject TooEnsure.Lib.Client.Services.Interface.IPost PostService;


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item" aria-current="page">Library</li>
    </ol>
</nav>
<!--PostService.Articles.FirstOrDefault(post => post.ID == selectedPostId).Title-->
<PostForm />
<GridRow>

    @if (PostService.Articles.Count > 0)
    {
        @foreach (var article in PostService.Articles)
        {
            <GridCol Mobile="col-sm-12" Tablets="col-md-6" Desktops="col-lg-4" DesktopsPlus="col-xl-3">
                <div class="card">
                    <img src="img/females-exercise.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@(article.Title)</h5>
                        <p class="card-text"></p>
                    </div>
                </div>
            </GridCol>
        }
    }
    else
    {
        <span>Loading Articles..</span>
    }
</GridRow>


